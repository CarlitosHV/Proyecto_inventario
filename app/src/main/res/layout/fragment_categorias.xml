<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_categorias">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbarcateprods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimaryVariant"
                    app:title="@string/categoriaprod"/>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnherramientas"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp"
                    android:backgroundTint="?colorPrimaryVariant"
                    android:background="@drawable/ic_herramientas" />

                <ImageButton
                    android:id="@+id/btnConsumibles"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="150dp"
                    android:backgroundTint="?colorPrimaryVariant"
                    android:background="@drawable/ic_consumibles" />

            </LinearLayout>
            <SearchView
                android:id="@+id/SearchViewHerramientas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/custom_list_view_categorias"
                android:layout_width="match_parent"
                android:layout_height="595dp"
                android:dividerHeight="1dp"/>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabcategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/nombre_usuarios"
        android:layout_margin="16dp" />

</FrameLayout>